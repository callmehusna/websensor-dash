 <form action="/api/calib" method="POST" id="calib">
    <div class="new-calib">
        <div class="form-group">
            <label for="nodeid" class="text-light">Node ID</label>
            <input type="text" name="nodeid" value="" placeholder="Enter Node ID">
        </div>
        <div class="form-group">
            <label for="Sensor">Choose a sensor type:</label>
