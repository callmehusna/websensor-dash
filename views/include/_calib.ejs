              <option value="2">pH</option>
              <option value="3">NH3-N</option>
            </select> 
        </div>
        <div class="form-group">
            <label for="Value1" class="text-light">Value 1</label>
            <input type="text" name="nodeid" value="" placeholder="Enter Value 1">
        </div>
        <div class="form-group">
            <label for="nodeid" class="text-light">Value 2</label>
            <input type="text" name="nodeid" value="" placeholder="Enter Value 2">
        </div>

        <div class="form-group">
            <label for="nodeid" class="text-light">Value 3</label>
            <input type="text" name="nodeid" value="" placeholder="Enter Value 3">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>